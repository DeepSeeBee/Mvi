<Window x:Class="CharlyBeck.Mvi.Mono.Wpf.CDebugWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CharlyBeck.Mvi.Mono.Wpf"
             mc:Ignorable="d" 
        SizeToContent="Manual"
        Top="0"
        Left="0"
        Height="400"
        Width="200"
        
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <UniformGrid Rows="3" Columns="3" DockPanel.Dock="Top">
                <Control/>
                <Button Content="Top" Click="LookUp"/>
                <Control/>
                <Button Content="Left" Click="LookLeft"/>
                <TextBox TextAlignment="Center" Text="{Binding LookDegrees, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
                <Button Content="Right" Click="LookRight"/>
                <Control/>
                <Button Content="Down" Click="LookDown"/>
            </UniformGrid>
            <ItemsControl  DockPanel.Dock="Top" ItemsSource="{Binding VmMonoFacade.VmFeatures}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding VmEnabled}" Content="{Binding VmFeatureDeclaration.VmName}">
                            </CheckBox>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
    </Grid> 
</Window>
